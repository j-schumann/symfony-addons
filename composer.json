{
    "name": "vrok/symfony-addons",
    "type": "symfony-bundle",
    "description": "Symfony helper classes",
    "keywords": ["apiplatform", "symfony", "helper", "cron", "phpunit"],
    "homepage": "https://vrok.de",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "symfony/framework-bundle":  "^8.0.0",
        "symfony/yaml": "^8.0.0"
    },
    "require-dev": {
        "api-platform/core": "^4.1.0",
        "doctrine/doctrine-bundle": "^2.12.0|^3.0.0",
        "doctrine/persistence": "^4.0.0",
        "doctrine/doctrine-fixtures-bundle": "^4.0.0",
        "doctrine/orm": "^3.0.0",
        "friendsofphp/php-cs-fixer": "^3.89.1",
        "monolog/monolog": "^3.0.0",
        "phpunit/phpunit": "^12.4.2",
        "rector/rector": "^2.2.7",
        "roave/security-advisories": "dev-latest",
        "symfony/browser-kit": "^8.0.0",
        "symfony/http-client": "^8.0.0",
        "symfony/mailer": "^8.0.0",
        "symfony/doctrine-messenger": "^8.0.0",
        "symfony/monolog-bundle": "^4.0.0",
        "symfony/string": "^8.0.0",
        "symfony/twig-bundle": "^8.0.0",
        "symfony/validator": "^8.0.0",
        "symfony/workflow": "^8.0.0",
        "vrok/doctrine-addons": "^3.0.0",
        "zalas/phpunit-globals": "^4.0.1"
    },
    "autoload": {
        "psr-4": {
            "Vrok\\SymfonyAddons\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vrok\\SymfonyAddons\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff -v",
        "cs-fix": "php-cs-fixer fix -v",
        "test": "phpunit --colors=always",
        "test-database": "phpunit --colors=always --group=database",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
